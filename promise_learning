// Make Coffee
// Put the cloth in the washing machine
// wipe the dust away


const clothes_washed = true
const rooms_cleaned = false

function makeCoffee(){
    return new Promise((resolve, reject) => {
        setTimeout(() => {
            const coffee_made = true
            if(coffee_made){
                resolve('Coffee is ready!!🍵');
            }
            else{
                reject ('Coffee is not made!!❌')
            }
        }, 200);
    })
}

function washClothes(){
    return new Promise((resolve, reject) => {
        setTimeout(() => {
            if(clothes_washed){
                resolve ('Clothes got washed!!👔');
            }
            else{
                reject ("Clothes didn't get washed!!❌")
            }
        }, 1000);
    })
}

function cleanRoom(){
    return new Promise((resolve, reject) => {
        setTimeout(() => {
            if(rooms_cleaned){
                resolve ('Rooms cleaned !! 🧹');
            }
            else{
                reject ("Rooms didn't get cleaned!!❌")
            }
        }, 2000);
    })
}

makeCoffee().then(value => {console.log(value); return washClothes()})
            .then(value => {console.log(value); return cleanRoom()})
            .then(value => {console.log(value); console.log("All the tasks completed !! ✅")})
            .catch(error => console.log(error));

